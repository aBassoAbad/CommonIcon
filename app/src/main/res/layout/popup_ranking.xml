<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttPogresivo"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/my_buttons"
        android:text="Progresivo"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/unminuto"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/my_buttons"
        android:text="1 minuto"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttPogresivo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRanking"
        android:layout_width="130dp"
        android:layout_height="403dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:textColor="@color/blanco"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewRanking2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttPogresivo" />

    <TextView
        android:id="@+id/textViewRanking2"
        android:layout_width="129dp"
        android:layout_height="407dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/blanco"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewRanking"
        app:layout_constraintTop_toBottomOf="@+id/unminuto" />
</androidx.constraintlayout.widget.ConstraintLayout>